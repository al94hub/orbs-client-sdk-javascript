{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "module": "es6",
    "noImplicitAny": true,
    "outDir": "./dist",
    "target": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "emitDeclarationOnly": true,
    "lib": ["esnext", "esnext.bigint"],
    "types": ["node", "jest"]
  },
  "include": ["src/lib.ts", "src/types/**/*.ts"]
}
