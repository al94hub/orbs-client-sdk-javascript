{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "module": "es6",
    "noImplicitAny": true,
    "outDir": "./dist",
    "target": "es5",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "lib": [ "es2017" ],
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "src/index.ts",
    "src/types/**/*.ts",
    "src/**/*.test.ts"
  ]
}